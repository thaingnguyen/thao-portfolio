---
import { Icon } from 'astro-icon/components';
---

<!-- Core Skills & Expertise Section -->
<section {...Astro.props} class="bg-surface-alt py-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <!-- Section Header -->
        <header class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold tracking-tight text-foreground">Core Skills & Expertise</h2>
            <p class="text-foreground-muted mt-4 text-lg">A blend of analytical strategy and creative vision.</p>
        </header>

        <!-- Skills Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
            <!-- Strategic & Analytical Card -->
            <div class="bg-surface-alt shadow-lg border border-transparent p-8 rounded-xl">
                <h3 class="text-2xl font-bold text-accent-primary mb-6 flex items-center gap-x-3">
                    Strategic & Analytical
                </h3>
                <ul class="space-y-4 text-foreground-secondary">
                    <li class="flex items-center gap-x-3">
                        <Icon name="brand" class="w-5 h-5" />
                        <span>Brand Strategy & Positioning</span>
                    </li>
                    <li class="flex items-center gap-x-3">
                        <Icon name="project-management" class="w-5 h-5" />
                        <span>End-to-End Project Management</span>
                    </li>
                    <li class="flex items-center gap-x-3">
                        <Icon name="budget-management" class="w-5 h-5" />
                        <span>Budget & Resource Management</span>
                    </li>
                      <li class="flex items-center gap-x-3">
                        <Icon name="stakeholder" class="w-5 h-5" />
                        <span>Stakeholder & Vendor Management</span>
                    </li>
                </ul>
            </div>

            <!-- Creative & Conceptual Card -->
            <div class="bg-surface-alt shadow-lg border border-transparent p-8 rounded-xl">
                <h3 class="text-2xl font-bold text-accent-secondary mb-6 flex items-center gap-x-3">
                    Creative & Conceptual
                </h3>
                <ul class="space-y-4 text-foreground-secondary">
                      <li class="flex items-center gap-x-3">
                        <Icon name="research" class="w-5 h-5" />
                        <span>User & Market Insight Research</span>
                    </li>
                      <li class="flex items-center gap-x-3">
                        <Icon name="creative" class="w-5 h-5" />
                        <span>Creative Brief Development</span>
                    </li>
                      <li class="flex items-center gap-x-3">
                        <Icon name="socialmedia" class="w-5 h-5" />
                        <span>Social Media Strategy (Meta, TikTok)</span>
                    </li>
                    <li class="flex items-center gap-x-3">
                        <Icon name="content" class="w-5 h-5" />
                        <span>Content Strategy & KOL Management</span>
                    </li>
                      <li class="flex items-center gap-x-3">
                        <Icon name="data" class="w-5 h-5" />
                        <span>Data Analysis & Reporting</span>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Tools of the Trade -->
        <header class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold tracking-tight text-foreground">Tools of the Trade</h2>        
            <p class="text-foreground-muted mt-2">The software, platforms, and languages I use to bring ideas to life.</p>
        </div>
        <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
              <div class="bg-surface-alt shadow-lg border border-transparent p-8 rounded-2xl text-center">
                <h4 class="text-xl font-bold text-foreground">Adobe Creative Suite</h4>
                <p class="text-foreground-muted mt-2">Adobe Photoshop, Adobe Illustrator, Adobe Premiere</p>
              </div>
              <div class="bg-surface-alt shadow-lg border border-transparent p-8 rounded-2xl text-center">
                <h4 class="text-xl font-bold text-foreground">Languages</h4>
                <p class="text-foreground-muted mt-2">Vietnamese (Native) <br> English (Professional Proficiency)</p>
              </div>
        </div>
    </div>  
</section>
