---
import { journeyData } from '../../content/journey';
---
<section {...Astro.props} class="bg-gray-900 py-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-bold text-white">Career Journey</h2>
        <p class="mt-4 text-lg text-gray-400">More than a timeline, this is my story of growth, challenge, and impact.</p>
    </div>

    <div class="max-w-7xl mx-auto mt-20">
        <!-- Timeline container -->
        <div class="relative">
            <!-- The connecting line for DESKTOP -->
            <div class="hidden md:block absolute top-[57px] left-0 w-full h-px bg-gray-700"></div>
            
            <div class="grid grid-cols-1 md:grid-cols-4 gap-y-12 md:gap-y-0 md:gap-x-8">
                
                {journeyData.map((item, index) => (
                <div class="relative md:flex md:flex-col md:items-center">
                    <!-- Mobile layout container -->
                    <div class="md:hidden flex items-start gap-x-4">
                        <!-- Mobile dot and line -->
                        <div class="flex flex-col items-center">
                            <div class={`w-3.5 h-3.5 bg-blue-500 rounded-full shadow-[0_0_12px_rgba(59,130,246,0.8)] ${index === journeyData.length - 1 ? 'present-dot' : ''}`}></div>
                            {index < journeyData.length - 1 && <div class="w-px h-full bg-gray-700 mt-2"></div>}
                        </div>
                        <!-- Mobile card content -->
                        <div class="w-full -mt-1">
                            <h4 class="font-semibold text-gray-200">{item.title}</h4>
                            <p class="text-sm text-gray-500 mb-3">{item.date}</p>
                            <div class="bg-gray-800/50 border border-gray-700/50 p-6 rounded-lg shadow-lg w-full text-left">
                                <p class="text-sm text-gray-400">{item.company}</p>
                                <h3 class="text-xl font-bold text-blue-400 tracking-tight">{item.role}</h3>
                                <p class="mt-2 text-gray-400 leading-relaxed">{item.description}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Desktop layout -->
                    <div class="hidden md:block text-center z-10">
                        <h4 class="font-semibold text-gray-200">{item.title}</h4>
                        <p class="text-sm text-gray-500">{item.date}</p>
                        <div class={`mt-2 w-3.5 h-3.5 bg-blue-500 rounded-full mx-auto shadow-[0_0_12px_rgba(59,130,246,0.8)] ${index === journeyData.length - 1 ? 'present-dot' : ''}`}></div>
                    </div>
                    <div class="hidden md:block mt-16 w-full h-full">
                        <div class="bg-gray-800/50 border border-gray-700/50 p-6 rounded-lg shadow-lg w-full h-full text-left transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-blue-500/10 hover:border-gray-600">
                            <p class="text-sm text-gray-400">{item.company}</p>
                            <h3 class="text-xl font-bold text-blue-400 tracking-tight">{item.role}</h3>
                            <p class="mt-2 text-gray-400 leading-relaxed">{item.description}</p>
                        </div>
                    </div>
                </div>
                ))}
            </div>
        </div>
    </div>
</section>

<style>
  @keyframes pulse-glow {
    0%, 100% {
        transform: scale(1);
        box-shadow: 0 0 15px 2px rgba(59, 130, 246, 0.6);
    }
    50% {
        transform: scale(1.15);
        box-shadow: 0 0 25px 5px rgba(59, 130, 246, 0.9);
    }
  }
  .present-dot {
      animation: pulse-glow 2s ease-in-out infinite;
  }
</style>
